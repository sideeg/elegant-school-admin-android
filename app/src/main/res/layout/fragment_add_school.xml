<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="بيانات المدرسة"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />






            <EditText
                android:id="@+id/add_school_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/edittext_background"
                android:hint="اسم المدرسة"
                android:inputType="textCapSentences"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/add_user_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/edittext_background"
                android:hint="اسم المسؤول"
                android:inputType="textCapSentences"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorPrimaryDark" />

        <EditText
                android:id="@+id/add_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/edittext_background"
                android:hint=" كلمة المرور"
                android:inputType="textPassword"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/edittext_background"
                android:hint="تأكيد كلمة المرور "
                android:inputType="textPassword"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorPrimaryDark" />

        <EditText
                android:id="@+id/add_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/edittext_background"
                android:hint=" رقم هاتف المسؤول"
                android:inputType="phone"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/school_add_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/button_background"
            />


    </LinearLayout>
</ScrollView>