<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="0dp"/>
                    <solid android:color="@color/white" />
                    <gradient android:angle="0" android:endColor="@color/orange_gradient_end" android:startColor="@color/orange_gradient_start" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="0dp"/>
                    <solid android:color="@color/white" />
                    <gradient android:angle="0" android:endColor="@color/orange_gradient_end" android:startColor="@color/orange_gradient_start" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="0dp"/>
                    <solid android:color="@color/white" />
                    <gradient android:angle="0" android:endColor="@color/orange_gradient_end" android:startColor="@color/orange_gradient_start" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>